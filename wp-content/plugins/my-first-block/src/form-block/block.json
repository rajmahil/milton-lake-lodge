{
	"$schema": "https://schemas.wp.org/trunk/block.json",
	"apiVersion": 3,
	"name": "brad-boilerplate/form-block",
	"version": "0.1.0",
	"title": "Form Section",
	"category": "widgets",
	"icon": "smiley",
	"example": {},
	"attributes": {
		"topHeading": {
			"type": "string",
			"default": "Get in Touch"
		},
		"heading": {
			"type": "string",
			"default": "Contact Us"
		},
		"formTitle": {
			"type": "string",
			"default": "Contact Us"
		},
		"fields": {
			"type": "array",
			"default": [],
			"items": {
				"type": "object",
				"properties": {
					"type": { "type": "string" },
					"label": { "type": "string" },
					"name": { "type": "string" },
					"required": { "type": "boolean" },
					"fullWidth": { "type": "boolean" },
					"options": {
						"type": "array",
						"default": [],
						"items": { "type": "string" }
					}
				}
			}
		},
		"submitButtonText": {
			"type": "string",
			"default": "Send Message"
		}
	},

	"supports": {
		"html": false
	},
	"textdomain": "form-section-block",
	"editorScript": "file:./index.js",
	"editorStyle": [ "file:../style-index.css" ],
	"style": [ "file:../style-index.css" ],
	"render": "file:./render.php"
}
