{
	"$schema": "https://schemas.wp.org/trunk/block.json",
	"apiVersion": 3,
	"name": "brad-boilerplate/showcase-section",
	"version": "0.1.0",
	"title": "Showcase Section",
	"category": "widgets",
	"icon": "smiley",
	"description": "A customizable showcase section block with a top heading, main heading, subheading, dual buttons, and a sliding image gallery.",
	"example": {},
	"attributes": {
		"heading": {
			"type": "string",
			"selector": "h2"
		},

		"buttonText": {
			"type": "string",
			"default": "Learn More"
		},
		"buttonUrl": {
			"type": "string",
			"default": "#"
		},
		"images": {
			"type": "array",
			"default": [],
			"items": {
				"type": "object"
			}
		},
		"backgroundImage": {
			"type": "object",
			"default": {}
		},
		"imagesSpeed": {
			"type": "string",
			"default": "medium"
		},
		"sectionId": {
			"type": "string",
			"default": ""
		}
	},
	"supports": {
		"html": false,
		"color": {
			"background": true,
			"text": true
		}
	},
	"textdomain": "showcase-section-block",
	"editorScript": "file:./index.js",
	"editorStyle": [ "file:../style-index.css" ],
	"style": [ "file:../style-index.css" ],
	"render": "file:./render.php"
}
